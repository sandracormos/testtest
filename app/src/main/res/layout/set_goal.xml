<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3A4F6A"
        android:backgroundTint="#3A4F6A"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".MainActivity">


        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/select_your_goal"
            android:textColor="@color/white"
            android:textSize="25sp"
            />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="310sp">

            <RadioButton
                android:id="@+id/weightLossBtn"
                android:layout_width="110dp"
                android:layout_height="53dp"
                android:layout_marginEnd="24dp"
                android:text="Weight Loss"
                app:layout_constraintEnd_toStartOf="@+id/muscleGainBtn"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="238dp" />

            <RadioButton
                android:id="@+id/muscleGainBtn"
                android:layout_width="101dp"
                android:layout_height="34dp"
                android:layout_marginEnd="12dp"
                android:text="Muscle Gain"
                app:layout_constraintEnd_toStartOf="@+id/button3"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="258dp" />

            <RadioButton
                android:id="@+id/button3"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:text="General Fitness and Wellness"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="294dp"
                tools:layout_editor_absoluteY="179dp" />

            <ImageButton
                android:id="@+id/weightlossbtn"
                android:layout_width="163dp"
                android:layout_height="133dp"
                android:background="#00FFFFFF"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.502"
                app:srcCompat="@drawable/weight_loss_icon" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
                android:id="@+id/photoMaintainWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/photoBulk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/photoLoseWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/nextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onNextButtonClicked"
            android:text="Next" />


        <!-- Next Button -->


</LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:background="@color/input"
        android:text="@string/nutrimotion"
        android:textColor="@color/button"
        android:gravity="center"

        android:textSize="30sp"
        android:textStyle="bold|italic" />
</RelativeLayout>



























