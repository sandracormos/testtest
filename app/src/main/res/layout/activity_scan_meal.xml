<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/titlu"
    android:layout_margin="10dp"
    tools:context=".ScanMeal">


    <Button
        android:id="@+id/btn_scan"
        android:layout_width="143dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="121dp"
        android:layout_marginBottom="610dp"
        android:backgroundTint="#34EDE0"
        android:text="Scan"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/aux_pannel"
        android:layout_width="322dp"
        android:layout_height="569dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="34dp"
        android:background="#8AA1C0"
        android:backgroundTint="@color/text"
        android:visibility="invisible"
        tools:visibility="invisible" />


    <TextView
        android:id="@+id/product_name"
        android:layout_width="199dp"
        android:layout_height="61dp"
        android:layout_above="@+id/aux_pannel"
        android:layout_alignEnd="@+id/aux_pannel"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="-76dp"
        android:background="@color/input"
        android:backgroundTint="@color/input"
        android:gravity="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/responseTextView"
        android:layout_width="295dp"
        android:layout_height="220dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="112dp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:visibility="invisible"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/kcal_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="364dp"
        android:text="TextView"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/kcal_label"
        android:layout_width="54dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/aux_pannel"
        android:layout_alignEnd="@+id/aux_pannel"
        android:layout_marginTop="218dp"
        android:layout_marginEnd="245dp"
        android:background="@color/text"
        android:gravity="center"
        android:text="KCAL:"
        android:visibility="invisible"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/number_of_servings_label"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/aux_pannel"
        android:layout_alignBottom="@+id/aux_pannel"
        android:layout_marginEnd="182dp"
        android:layout_marginBottom="397dp"
        android:background="@color/text"
        android:gravity="center"

        android:text="Number of Service:"
        android:visibility="invisible"
        tools:visibility="visible" />

    <Button
        android:id="@+id/number_of_servings_button"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/aux_pannel"
        android:layout_alignBottom="@+id/aux_pannel"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="377dp"
        android:text="1"
        android:textColor="@color/black"
        android:textSize="12dp"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/cancel_button"
        android:layout_width="72dp"
        android:layout_height="61dp"
        android:layout_alignStart="@+id/aux_pannel"

        android:layout_alignTop="@+id/aux_pannel"
        android:layout_alignEnd="@+id/responseTextView"
        android:layout_alignBottom="@+id/aux_pannel"
        android:layout_marginStart="14dp"
        android:layout_marginTop="500dp"
        android:layout_marginEnd="225dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#00FFFFFF"
        android:scaleType="fitXY"
        android:visibility="invisible"
        app:srcCompat="@drawable/new_cancel" />

    <ImageButton
        android:id="@+id/tick_button"
        android:layout_width="78dp"
        android:layout_height="62dp"
        android:layout_alignStart="@+id/aux_pannel"
        android:layout_alignTop="@+id/aux_pannel"
        android:layout_alignEnd="@+id/aux_pannel"
        android:layout_alignBottom="@+id/aux_pannel"
        android:layout_marginStart="235dp"
        android:layout_marginTop="501dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="6dp"
        android:backgroundTint="#00FFFFFF"
        android:scaleType="fitXY"
        android:visibility="invisible"
        app:srcCompat="@drawable/new_save_button" />

    <ImageView
        android:id="@+id/eating_icon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="187dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="16dp"
        android:visibility="visible"
        app:srcCompat="@drawable/eating_icon"
        tools:visibility="visible" />


</RelativeLayout>







