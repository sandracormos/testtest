<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/titlu"
    android:layout_margin="10dp"
    tools:context=".ScanMeal">


    <Button
        android:id="@+id/btn_scan"
        android:layout_width="107dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="627dp"
        android:backgroundTint="#34EDE0"
        android:text="Scan"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/aux_pannel"
        android:layout_width="322dp"
        android:layout_height="569dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="34dp"
        android:background="#8AA1C0"
        android:backgroundTint="@color/text"
        android:visibility="invisible"
        tools:visibility="invisible" />


    <TextView
        android:id="@+id/product_name"
        android:layout_width="199dp"
        android:layout_height="61dp"
        android:layout_above="@+id/aux_pannel"
        android:layout_alignEnd="@+id/aux_pannel"
        android:layout_marginEnd="71dp"
        android:layout_marginBottom="-78dp"
        android:background="@color/input"
        android:backgroundTint="@color/input"
        android:gravity="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/responseTextView"
        android:layout_width="295dp"
        android:layout_height="220dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="112dp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:visibility="invisible"
        tools:visibility="invisible" />

    <ImageButton
        android:id="@+id/tick_button"
        android:layout_width="57dp"
        android:layout_height="48dp"
        android:layout_alignEnd="@+id/aux_pannel"
        android:layout_alignBottom="@+id/aux_pannel"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="11dp"
        android:background="#373F51B5"
        android:visibility="invisible"
        app:srcCompat="@drawable/tick" />

    <ImageButton
        android:id="@+id/cancel_button"
        android:layout_width="67dp"
        android:layout_height="48dp"
        android:layout_alignStart="@+id/aux_pannel"
        android:layout_alignBottom="@+id/aux_pannel"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="11dp"
        android:background="#373F51B5"
        android:visibility="invisible"
        app:srcCompat="@drawable/cancel" />

    <TextView
        android:id="@+id/kcal_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="364dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/kcal_label"
        android:layout_width="54dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/aux_pannel"
        android:layout_alignEnd="@+id/aux_pannel"
        android:layout_marginTop="218dp"
        android:layout_marginEnd="245dp"
        android:background="@color/text"
        android:gravity="center"
        android:text="KCAL:" />

    <TextView
        android:id="@+id/number_of_servings_label"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/aux_pannel"
        android:layout_alignBottom="@+id/aux_pannel"
        android:layout_marginEnd="182dp"
        android:layout_marginBottom="397dp"
        android:gravity="center"
        android:text="Number of Service:"

        android:background="@color/text"/>

    <Button
        android:id="@+id/number_of_servings_button"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/aux_pannel"
        android:layout_alignBottom="@+id/aux_pannel"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="377dp"
        android:text="1"
        android:textColor="@color/black"
        android:textSize="12dp" />


</RelativeLayout>







